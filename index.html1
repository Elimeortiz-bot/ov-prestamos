<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>O&V Préstamos</title>
  <style>
    body{
      font-family: Arial, sans-serif;
      background:#f2f2f2;
      margin:0;
      padding:0;
    }
    header{
      background:#0d1b2a;
      color:white;
      padding:15px;
      text-align:center;
      font-size:22px;
      font-weight:bold;
    }
    .container{
      padding:20px;
    }
    .card{
      background:white;
      padding:15px;
      border-radius:10px;
      margin-bottom:15px;
      box-shadow:0 0 5px rgba(0,0,0,0.1);
    }
    input, button{
      width:100%;
      padding:10px;
      margin:8px 0;
      border-radius:5px;
      border:1px solid #ccc;
      font-size:16px;
    }
    button{
      background:#0d1b2a;
      color:white;
      border:none;
      cursor:pointer;
    }
    button:hover{
      background:#1b263b;
    }
    .hidden{display:none;}
  </style>
</head>

<body>

<header>O&V Préstamos</header>

<div class="container">

  <!-- LOGIN ADMIN -->
  <div class="card" id="loginBox">
    <h3>Acceso Administrador</h3>
    <input type="text" id="user" placeholder="Usuario">
    <input type="password" id="pass" placeholder="Contraseña">
    <button onclick="login()">Entrar</button>
    <p id="loginMsg" style="color:red;"></p>
  </div>

  <!-- PANEL ADMIN -->
  <div class="card hidden" id="adminPanel">
    <h3>Panel Administrativo</h3>

    <input id="cliente" placeholder="Nombre del cliente">
    <input id="monto" placeholder="Monto del préstamo">
    <input id="cuotas" placeholder="Cantidad de cuotas">
    <button onclick="crearPrestamo()">Crear préstamo</button>

    <h4>Clientes</h4>
    <div id="lista"></div>
  </div>

</div>

<script>
let prestamos = [];

function login(){
  const u = document.getElementById("user").value;
  const p = document.getElementById("pass").value;

  if(u==="admin" && p==="12345"){
    document.getElementById("loginBox").classList.add("hidden");
    document.getElementById("adminPanel").classList.remove("hidden");
  }else{
    document.getElementById("loginMsg").innerText="Datos incorrectos";
  }
}

function crearPrestamo(){
  const c = document.getElementById("cliente").value;
  const m = document.getElementById("monto").value;
  const q = document.getElementById("cuotas").value;

  if(!c || !m || !q){
    alert("Completa todos los campos");
    return;
  }

  prestamos.push({cliente:c, monto:m, cuotas:q});
  mostrar();
}

function mostrar(){
  const lista = document.getElementById("lista");
  lista.innerHTML="";
  prestamos.forEach((p,i)=>{
    lista.innerHTML += `
      <div style="border:1px solid #ccc; padding:8px; margin:5px; border-radius:5px;">
        <b>${p.cliente}</b><br>
        Monto: ${p.monto}<br>
        Cuotas: ${p.cuotas}
      </div>
    `;
  });
}
</script>

</body>
</html>
